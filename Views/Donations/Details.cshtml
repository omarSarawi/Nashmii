@model test2.Models.Donation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/adminDashboard.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Page heading -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-0">Donation Details</h1>
        </div>
    </div>

    <!-- DETAILS IN A TABLE -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(m => m.Amount)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.Comping.Title)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.User.Id)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(m => m.Amount)</td>
                            <td>@Html.DisplayFor(m => m.Comping.Title)</td>
                            <td>@Html.DisplayFor(m => m.User.Id)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>