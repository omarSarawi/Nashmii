<style>
    /* Center the dropdown trigger block */
    .profile-trigger {
        cursor: pointer;
        user-select: none;
        text-align: center;
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
    }

    /* Avatar styling */
    .profile-trigger img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #555;
    }

    /* “Me” text */
    .profile-trigger .label {
        font-size: 1.25rem;
        color: #444;
    }

    /* Caret icon */
    .profile-trigger .bi-caret-down-fill {
        font-size: 1.25rem;
        color: #444;
    }

    /* Dropdown menu styling */
    .dropdown-menu.profile-menu {
        width: 220px;
        padding: 1rem;
        border-radius: 0.5rem;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 1rem;
    }

    .profile-header img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #ddd;
    }

    .profile-header h6 {
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .profile-header hr {
        margin: 0.5rem 0;
    }

    .profile-menu .dropdown-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.5rem 0;
    }

    .profile-menu .dropdown-item .icon-text {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
</style>

<body>
    <div>
        <main>
            <header class="header">
                <!-- Header Top Start -->

                <!-- Search Offcanvas -->
                <div class="offcanvas offcanvas-top bg-info" id="offcanvas-search" data-bs-scroll="true">
                    <div class="container d-flex flex-row py-5">
                        <form class="search-form w-100">
                            <input id="search-form" type="text" class="form-control"
                                placeholder="Type keyword and hit enter" />
                        </form>
                        <button type="button" class="btn-close icon-xs bg-light rounded-5" data-bs-dismiss="offcanvas"
                            aria-label="Close"></button>
                    </div>
                </div>

                <!-- Navbar Start -->
                <nav class="navbar navbar-expand-lg">
                    <div class="container px-lg-0">
                        <!-- Logo -->
<a class="navbar-brand p-0" href="/Home">
  <img
    src="~/images/components/logo-y.png"
    alt="Logo"
    width="100"
    height="40"
  >
</a>

                        <button class="navbar-toggler offcanvas-nav-btn " type="button">
                            <i class="fa fa-bars"></i>
                        </button>
                        <div class="offcanvas offcanvas-start offcanvas-nav">
                            <div class="offcanvas-header">
                                <a href="index-4.html" class="text-inverse">
                                    <img src="~/images/components/logo.png" alt="Logo" />
                                </a>
                                <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                                    aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body pt-0 align-items-center">
                                <!-- Navbar Links -->
                                <ul class="navbar-nav mx-auto align-items-lg-center">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            Fields <span class="clo">Nashmi</span>
                                        </a>
                                        @await Component.InvokeAsync("Categories")
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="BloodCamping">Blood
                                            Banks</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            Shop
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="/Shop/Index">Shop</a></li>
                                            <li><a class="dropdown-item" href="/Cart/Index">Cart</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Home" asp-action="AboutUs" class="nav-link">About Us</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="ContactRequest" asp-action="CreateContact"
                                            class="nav-link">Contact</a>
                                    </li>
                                </ul>

                                <div
                                    class="mt-3 mt-lg-0 d-flex align-items-center header-actions w-100 justify-content-between">
                                    <!-- ──────── User (or “Sign In”) ───────── -->
                                    @if (!(ViewContext.RouteData.Values["controller"] as string == "Users"
                                                                        && ViewContext.RouteData.Values["action"] as string == "Login"))
                                    {
                                        @if (!string.IsNullOrEmpty(username))
                                        {
                                            <!-- User Dropdown sits flush‐left -->
                                            <div class="dropdown">
                                                <a id="meDropdown" class="text-reset d-flex align-items-center" href="#"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span class="me-1">@username</span>
                                                    <i class="bi bi-caret-down-fill"></i>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-end profile-menu"
                                                    aria-labelledby="meDropdown">
                                                    <li class="px-3 py-2 text-center">
                                                        <img src="https://i.pravatar.cc/150?img=12" class="mb-2 rounded-circle"
                                                            alt="My Avatar" style="width:60px; height:60px;" />
                                                        <h6 class="mb-0">@username</h6>
                                                        <hr class="my-2" />
                                                    </li>
                                                    <li>
                                                        <a asp-controller="Users" asp-action="Account"
                                                            class="dropdown-item d-flex justify-content-between align-items-center">
                                                            <div class="icon-text d-flex align-items-center">
                                                                <i class="bi bi-person me-2"></i>
                                                                <span>Profile</span>
                                                            </div>
                                                            <i class="bi bi-chevron-right"></i>
                                                        </a>
                                                    </li>
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <li>
                                                            <a asp-controller="Dashboard" asp-action="Index"
                                                                class="dropdown-item d-flex justify-content-between align-items-center">
                                                                <div class="icon-text d-flex align-items-center">
                                                                    <i class="bi bi-gear me-2"></i>
                                                                    <span>Dashboard</span>
                                                                </div>
                                                                <i class="bi bi-chevron-right"></i>
                                                            </a>
                                                        </li>
                                                    }
                                                    @if (User.IsInRole("HospitalAdmin"))
                                                    {
                                                        <li>
                                                            <a asp-controller="HospitalDashboard" asp-action="Index"
                                                                class="dropdown-item d-flex justify-content-between align-items-center">
                                                                <div class="icon-text d-flex align-items-center">
                                                                    <i class="bi bi-gear me-2"></i>
                                                                    <span>Dashboard</span>
                                                                </div>
                                                                <i class="bi bi-chevron-right"></i>
                                                            </a>
                                                        </li>
                                                    }
                                                    <li>
                                                        <a asp-controller="Users" asp-action="Logout"
                                                            class="dropdown-item d-flex justify-content-between align-items-center">
                                                            <div class="icon-text d-flex align-items-center">
                                                                <i class="bi bi-box-arrow-right me-2"></i>
                                                                <span>Logout</span>
                                                            </div>
                                                            <i class="bi bi-chevron-right"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        }
                                        else
                                        {
                                            <a asp-controller="Users" asp-action="Login" class="text-reset nav-link-custom">
                                                Sign In
                                            </a>
                                        }
                                    }

                                    <!-- ──────── Cart Icon (always flush‐right) ───────── -->
                                    <a href="/Cart/Index" class="text-reset icon position-relative">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span class="cart-num">2</span>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>

                </nav>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <!-- Navbar End -->
            </header>
            @RenderBody()
        </main>
    </div>
