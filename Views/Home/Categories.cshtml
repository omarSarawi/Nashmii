<body>
    <div id="preloader">
        <div class="preloader">
            <span></span>
            <span></span>
        </div>
    </div>
    <section class="promo-area" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="promo-wrap">
                        <h1 class="promo-title">Categories <span> Nashmi</span></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="causes-area cause-page section-padding">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-sm-4">
                        <div class="single-cause">
                            <figure class="cause-thumb">
                                <img src="@item.ImgUrl" alt="Cause image" />
                            </figure>
                            <div class="cause-detials">
                                <h3>@item.Title</h3>
                                <p>@item.ShortDesc</p>
                                <div class="cause-donate">
                                    <div class="cause-raise">
                                        <label>Raise</label> $@item.Amount
                                    </div>
                                    <div class="cause-goal">
                                        <label>Goal</label> $@item.Goal
                                    </div>
                                </div>
                                @{
                                    var progress = item.Goal.HasValue && item.Goal > 0
                                    ? ((double)item.Amount.GetValueOrDefault() / item.Goal.Value) * 100
                                    : 0;
                                }
                                <div class="progress">
                                    <div class="progress-bar wow fadeInLeft" role="progressbar"
                                        style="width: @progress.ToString("0")%" aria-valuenow="@progress" aria-valuemin="0"
                                        aria-valuemax="100">
                                        @progress.ToString("0")%
                                    </div>
                                </div>
                                <hr />
                                <a href="@Url.Action("DonationDetails", "Home", new { id = item.Id })">
                                    <p class="details">Details</p>
                                </a>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>

