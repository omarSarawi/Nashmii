@model test2.Models.BloodComping

@{
    ViewData["Title"] = "Create Blood Campaign";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container mt-4">
    <h2 class="text-center mb-4 text-primary">
        <i class="bi bi-plus-circle"></i> Create Blood Donation Campaign
    </h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="Type" class="form-label">Blood Type</label>
                    <select asp-for="Type" class="form-control">
                        <option value="">-- Select Blood Type --</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="form-label">Amount Collected</label>
                    <input asp-for="Amount" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Goal" class="form-label">Goal</label>
                    <input asp-for="Goal" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Goal" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Create Campaign
                    </button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Index" asp-controller="HospitalDashboard" class="btn btn-link text-decoration-none">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}