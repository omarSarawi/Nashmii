@model List<test2.Models.BloodComping>

@{
    ViewData["Title"] = "Blood Donation Campaign Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
        padding: 20px;
    }

    .btn-details {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
    }

    .btn-details:hover {
        background-color: #0056b3;
        color: #fff;
    }

    @@media (max-width: 576px) {
        .table-responsive {
            font-size: 14px;
        }
    }
</style>

<div class="container">
    <h1 class="mb-4 text-center">Blood Donation Campaign Dashboard</h1>
    <div class="table-responsive">
        <div class="d-flex justify-content-end mb-3"></div>
        <a href="@Url.Action("Create", "BloodCompings")" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create Blood Campaign
        </a>
    </div>
    <table class="table align-middle">
        <thead class="table-dark">
            <tr>
                <th>Blood Type</th>
                <th>Amount Collected</th>
                <th>Goal</th>
                <th>Goal Achieved</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var campaign in Model)
            {
                bool goalAchieved = campaign.Amount >= campaign.Goal;

                <tr>
                    <td>@campaign.Type</td>
                    <td>@campaign.Amount</td>
                    <td>@campaign.Goal</td>
                    <td>
                        <span class="badge @(goalAchieved ? "bg-success" : "bg-danger")">
                            @(goalAchieved ? "Yes ✅" : "No ❌")
                        </span>
                    </td>
                    <td>
                        <a href="@Url.Action("BloodCompingDonors", "HospitalDashboard", new { id = campaign.Id })">
                            <button class="btn-details">
                                View Details
                            </button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>
