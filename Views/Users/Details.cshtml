@model test2.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/adminDashboard.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Page heading -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-0">User Details</h1>
        </div>
    </div>

    <!-- DETAILS IN A TABLE (matching Categories styling) -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(m => m.Username)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.Role)</th>

                            <th scope="col">@Html.DisplayNameFor(m => m.Email)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.Phone)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(m => m.Username)</td>
                            <td>@Html.DisplayFor(m => m.Role)</td>

                            <td>@Html.DisplayFor(m => m.Email)</td>
                            <td>@Html.DisplayFor(m => m.Phone)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row mt-3">
        <div class="col-12">

            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>