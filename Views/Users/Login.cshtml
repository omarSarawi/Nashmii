@model User
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #fffcf4;
            color: #212529;
            font-family: sans-serif;
        }

        .card {
            background-color: #fff;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
            border-color: #ffc107;
        }

        .btn-sig {
            font-weight: 600;
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
            background-color: transparent;
            color: #212529;
            border: 1px solid #212529;
        }

        .btn-sig:hover {
            background-color: #ffc107;
            color: #fff;
            border-color: #ffc107;
        }

        .btn-sig-primary {
            background-color: #ffc107;
            color: #212529;
            border: 1px solid #ffc107;
        }

        .btn-sig-primary:hover {
            background-color: #e0a800;
            color: #212529;
            border-color: #d39e00;
        }

        .toggle-password {
            cursor: pointer;
            user-select: none;
            border-left: none;
        }

        .form-label {
            font-weight: 500;
        }

        .invalid-feedback {
            display: block;
            font-size: 0.875em;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card p-4 p-md-5">
                    <h2 class="text-center mb-4">Sign In</h2>

                    @if (ViewBag.AccessDeniedMessage != null)
                    {
                        <div class="alert alert-danger">@ViewBag.AccessDeniedMessage</div>
                    }

                    <form asp-action="Login" method="post" id="loginForm" novalidate>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username <span
                                    class="text-danger">*</span></label>
                            <input asp-for="Username" class="form-control" placeholder="Enter your username" required />
                            <span asp-validation-for="Username" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password <span
                                    class="text-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control" placeholder="Enter your password"
                                    required type="password" />
                                <span class="input-group-text toggle-password" id="togglePass" tabindex="0"
                                    role="button" aria-label="Show password">Show</span>
                            </div>
                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-sig-primary">Sign In</button>
                            <button type="button" class="btn btn-sig"
                                onclick="window.location.href='@Url.Action("Register", "Users")'">Sign Up</button>
                        </div>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @if (ViewBag.Error != null)
                        {
                            <p class="text-danger">@ViewBag.Error</p>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            const toggle = document.getElementById('togglePass');
            const pwd = document.getElementById('Password');

            if (toggle && pwd) {
                const toggleVisibility = () => {
                    const isPwd = pwd.type === 'password';
                    pwd.type = isPwd ? 'text' : 'password';
                    toggle.textContent = isPwd ? 'Hide' : 'Show';
                    toggle.setAttribute('aria-label', isPwd ? 'Hide password' : 'Show password');
                };

                toggle.addEventListener('click', toggleVisibility);
                toggle.addEventListener('keydown', (e) => {
                    if (e.key === 'Enter' || e.key === ' ') {
                        toggleVisibility();
                    }
                });
            }
        })();
    </script>
</body>

</html>
