@model test2.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/adminDashboard.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Page heading -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-0">Category Details</h1>
        </div>
    </div>

    <!-- DETAILS IN A TABLE (similar styling to Index) -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(m => m.Title)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.Description)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.User)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.ImgUrl)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(m => m.Title)</td>
                            <td>@Html.DisplayFor(m => m.Description)</td>
                            <td>@Html.DisplayFor(m => m.User.Username)</td>
                            <td>
                                <img src="@Html.DisplayFor(m => m.ImgUrl)" alt="" class="img-fluid"
                                    style="width: 60x; height: 50px;">
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Edit" asp-route-id="" class=" btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>