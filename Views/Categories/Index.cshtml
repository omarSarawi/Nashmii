@model IEnumerable<test2.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/adminDashboard.cshtml";
}

<!-- Page heading -->
<div class="row align-items-center mb-4">
    <div class="col-12">
        <h1 class="mb-0">Categories</h1>
    </div>
</div>
<div class="container-fluid mt-4">
    <!-- “Create New” button on the far left (north) -->
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</div>


<!-- TABLE FOR SMALL-AND-UP (≥ sm) -->
<div class="row">
    <div class="col-12">
        <div class="d-none d-sm-block">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(m => m.Title)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.Description)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.User)</th>
                            <th scope="col">@Html.DisplayNameFor(m => m.ImgUrl)</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(mItem => item.Title)</td>
                                <td>@Html.DisplayFor(mItem => item.Description)</td>
                                <td>@Html.DisplayFor(mItem => item.User.Username)</td>
                                <td>
                                    <img src="@item.ImgUrl" alt="" class="img-fluid" style="width: 60x; height: 50px;">
                                </td>


                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary"
                                            title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"
                                            title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"
                                            title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- CARD/LIST FOR EXTRA-SMALL (< sm) -->
<div class="row">
    <div class="col-12">
        <div class="d-block d-sm-none">
            @foreach (var item in Model)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title mb-1">@item.Title</h5>
                                <p class="card-text small text-muted mb-1">@item.User?.Username</p>
                            </div>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"
                                    title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"
                                    title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </div>
                        <p class="card-text mt-2">@item.Description</p>
                        <p class="card-text small">
                            <span class="fw-semibold">Image URL:</span> @item.ImgUrl
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</div>